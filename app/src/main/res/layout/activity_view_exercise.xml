<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.himalayabhagwani.yogademoapp.ListExercises">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:text="NAME OF EXERCISE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/titleExe" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/boat_pose"
        android:layout_below="@+id/titleExe"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:id="@+id/imgExe" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_margin="8dp"
        android:text="START"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:id="@+id/btnStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:layout_above="@+id/btnStart"
        android:layout_centerInParent="true"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/timer" />

</RelativeLayout>

